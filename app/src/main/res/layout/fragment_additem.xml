<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainpage.addcontent.AddItemFragment"
    android:layout_marginTop="@dimen/content_padding_large"
    android:padding="@dimen/content_padding"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_title_edit"
        android:inputType="text"
        android:hint="@string/edit_text_title"
        android:autofillHints=""

    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_description_edit"
        android:inputType="text"
        android:hint="@string/edit_text_description"
        android:autofillHints=""
    />
</LinearLayout>